DELIMITER $$
CREATE TRIGGER VOICEMAILTRIGGER AFTER INSERT ON VOICEMAIL
FOR EACH ROW BEGIN
	INSERT INTO NOTIFICATION
	SET ID=NEW.ID,
	SENDER=NEW.FROMUSER,
	RECEIVER=NEW.TOUSER,
	TIMEOFNOTIFICATION=NOW(),
	TYPE='VOICEMAIL';
END$$
DELIMITER ;





DELETE FROM VOICEMAIL

SELECT * FROM VOICEMAIL

SELECT * FROM NOTIFICATION

ALTER TABLE NOTIFICATION ADD COLUMN TYPE VARCHAR(45)

DROP TABLE NOTIFICATION

DESC VOICEMAIL

CREATE TABLE NOTIFICATION (ID VARCHAR(16) PRIMARY KEY,SENDER VARCHAR(45),RECEIVER VARCHAR(45),TIMEOFNOTIFICATION DATETIME,TYPE VARCHAR(50),STATUS VARCHAR(5) DEFAULT 'NEW')